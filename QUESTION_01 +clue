<body>
    <div class="container">
        <h1>Treasure Hunt Question</h1>
        <p>What type of malware disguises itself as legitimate to trick users into installing it?</p>
        <form id="answerForm">
            <input type="text" id="answer" placeholder="Your answer..."><br>
            <input type="submit" value="Submit">
        </form>
        <p class="hint" id="feedback" style="display: none;"></p>
    </div>
    <script>
        document.getElementById('answerForm').addEventListener('submit', function(event) {
            event.preventDefault();
            var answer = document.getElementById('answer').value.trim().toLowerCase();
            var feedback = document.getElementById('feedback');
            
            if (answer === 'trojan' || answer === 'trojan horse') {
                feedback.style.color = 'green';
                feedback.innerHTML = 'Correct! Redirecting to the next clue...';
                feedback.style.display = 'block';
                setTimeout(function() {
                    window.location.href = 'Clue_01.html'; // Redirect to the next clue
                }, 2000); // Wait for 2 seconds before redirecting
            } else {
                feedback.style.color = 'red';
                feedback.innerHTML = 'Wrong answer. Hint: It\'s named after a famous horse from ancient mythology.';
                feedback.style.display = 'block';
            }
        });
    </script>
